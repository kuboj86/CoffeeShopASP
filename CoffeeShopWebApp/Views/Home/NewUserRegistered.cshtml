
@{
    ViewBag.Title = "NewUserRegistered";
}

<div id="RegistrationForm">
    <h1 id="AboutSiteText">Welcome @ViewBag.FirstName</h1>

        <a href="/Home/AddItemForm">Add new Item</a>
   
    <table class="table table-striped table-bordered table-condensed">
        <tr><th>Product Name</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        @foreach (var Product in ViewBag.ProductList)
        {
            <tr>
                <td>
                    @Product.Name
                </td>
                <td>
                    @Product.Description
                </td>
                <td>
                    @Product.Quantity
                </td>
                <td>
                    @Product.Price
                </td>
                <td>
                    <a href ="/Home/DeleteItem?ProductName=@Product.Name" onclick ="return confirm ('Are you Sure?')">Delete</a>
                </td>
                <td>
                    <a href ="/Home/EditItem?Name=@Product.Name">Edit</a>
                </td>

            </tr>
        }
    </table>
    
    @*model CoffeeShopWebApp.Models.UserInput*@

</div>
